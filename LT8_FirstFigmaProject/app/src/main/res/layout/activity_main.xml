<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title"
        android:paddingVertical="20dp"
        android:textStyle="bold"
        android:text="Math is Fun!"
        android:textAlignment="center"
        android:textColor="@color/fontcolor"
        android:textSize="50dp"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/homebutton"
        android:layout_gravity="end"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="Hello Menu"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="@color/fontcolor"
        android:text="Select Language"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEnglish"
            app:cornerRadius="30dp"
            android:layout_width="148dp"
            android:layout_height="168dp"
            android:text="English"
            android:backgroundTint="@color/btnEnglish"
            android:textColor="@color/fontEnglish"
            android:textSize="30dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHind1"
            android:layout_width="148dp"
            android:layout_height="168dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/btnHindi1"
            android:text="ಕನ್ನಡ"
            android:textColor="@color/fontHindi1"
            android:textSize="30dp"
            app:cornerRadius="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">
        <ImageButton
            android:id="@+id/btnHindi2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:background="@drawable/hindibutton2"
            />
        <ImageButton
            android:id="@+id/btnHindi3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/hindibutton3"
            android:layout_marginHorizontal="10dp"/>

    </LinearLayout>

</LinearLayout>